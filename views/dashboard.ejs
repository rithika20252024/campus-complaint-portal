<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard - Campus Complaint Portal</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include('partials/header') %>

  <main class="container mx-auto px-6 py-10">
    <% if (message) { %>
      <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-5 mb-8 rounded-r-xl">
        <%= message %>
      </div>
    <% } %>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
      <div class="bg-white p-6 rounded-xl shadow-md border-t-4 border-blue-500">
        <h3 class="text-lg font-semibold text-gray-600">Total</h3>
        <p class="text-4xl font-bold text-gray-900 mt-2"><%= stats.total %></p>
      </div>
      <div class="bg-white p-6 rounded-xl shadow-md border-t-4 border-yellow-500">
        <h3 class="text-lg font-semibold text-gray-600">Open</h3>
        <p class="text-4xl font-bold text-yellow-600 mt-2"><%= stats.open %></p>
      </div>
      <div class="bg-white p-6 rounded-xl shadow-md border-t-4 border-indigo-500">
        <h3 class="text-lg font-semibold text-gray-600">In Progress</h3>
        <p class="text-4xl font-bold text-indigo-600 mt-2"><%= stats.inProgress %></p>
      </div>
      <div class="bg-white p-6 rounded-xl shadow-md border-t-4 border-green-500">
        <h3 class="text-lg font-semibold text-gray-600">Resolved</h3>
        <p class="text-4xl font-bold text-green-600 mt-2"><%= stats.resolved %></p>
      </div>
    </div>

    <!-- Search & Filter -->
    <div class="bg-white p-6 rounded-xl shadow mb-8">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">
        <% if (user?.role === 'student') { %>Your Complaints<% } else { %>All Complaints (Admin View)<% } %>
      </h2>

      <div class="flex flex-col sm:flex-row gap-4">
        <input id="search" type="text" placeholder="Search title or category..."
               class="flex-1 px-5 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        <select id="statusFilter" class="px-5 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
          <option value="">All Statuses</option>
          <option value="Open">Open</option>
          <option value="In Progress">In Progress</option>
          <option value="Resolved">Resolved</option>
        </select>
      </div>
    </div>

    <!-- Complaints Table -->
    <div class="bg-white rounded-xl shadow overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-indigo-700 text-white">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold">ID</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Title</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Category</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Status</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Submitted</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Proof</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Reply</th>
              <th class="px-6 py-4 text-left text-sm font-semibold">Actions</th>
            </tr>
          </thead>
          <tbody id="complaintsBody" class="divide-y divide-gray-200">
            <% if (complaints.length === 0) { %>
              <tr>
                <td colspan="8" class="px-6 py-12 text-center text-gray-500 text-lg">
                  <% if (user?.role === 'student') { %>
                    You haven't submitted any complaints yet.
                  <% } else { %>
                    No complaints have been submitted yet.
                  <% } %>
                </td>
              </tr>
            <% } else { %>
              <% complaints.forEach(c => { %>
                <tr class="hover:bg-gray-50 transition-colors"
                    data-search="<%= (c.title + ' ' + c.category).toLowerCase() %>"
                    data-status="<%= c.status %>">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">#<%= c.id %></td>
                  <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= c.title %></td>
                  <td class="px-6 py-4 text-sm text-gray-600"><%= c.category %></td>
                  <td class="px-6 py-4 text-sm font-semibold
                    <%= c.status === 'Resolved' ? 'text-green-600' :
                        c.status === 'In Progress' ? 'text-indigo-600' :
                        'text-yellow-600' %>">
                    <%= c.status %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500"><%= c.createdAt %></td>
                  <td class="px-6 py-4 text-sm">
                    <% if (c.photo) { %>
                      <a href="<%= c.photo %>" target="_blank" class="text-indigo-600 hover:underline">View</a>
                    <% } else { %>
                      —
                    <% } %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-600"><%= c.reply || '—' %></td>
                  <td class="px-6 py-4 text-sm">
                    <!-- Delete button - visible to owner (student) or admin -->
                    <form action="/delete/<%= c.id %>" method="POST" 
                          onsubmit="return confirm('Are you sure you want to delete this complaint? This cannot be undone.');">
                      <button type="submit" class="text-red-600 hover:text-red-800 font-medium">
                        Delete
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-10 text-center space-x-6">
      <a href="/submit" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-10 py-4 rounded-xl shadow-lg transition duration-200">
        Submit New Complaint
      </a>

      <% if (user?.role === 'admin') { %>
        <a href="/admin" class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-semibold px-10 py-4 rounded-xl shadow-lg transition duration-200">
          Admin Panel
        </a>
      <% } %>
    </div>
  </main>

  <script src="/js/dashboard-filter.js"></script>
</body>
</html>