<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Submit Complaint</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include('partials/header') %>

  <main class="container mx-auto px-6 py-10 max-w-3xl">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Submit a New Complaint</h2>

      <form action="/submit" method="POST" enctype="multipart/form-data" class="space-y-6">
        <div>
          <label class="block text-gray-700 font-medium mb-2">Complaint Title <span class="text-red-500">*</span></label>
          <input type="text" name="title" required placeholder="e.g., Wi-Fi issue in Girls Hostel Block C"
                 class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>

        <div>
          <label class="block text-gray-700 font-medium mb-2">Category <span class="text-red-500">*</span></label>
          <select name="category" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
            <option value="">Select category</option>
            <option value="Hostel">Hostel</option>
            <option value="Mess / Food">Mess / Food</option>
            <option value="Wi-Fi / Internet">Wi-Fi / Internet</option>
            <option value="Academic / Faculty">Academic / Faculty</option>
            <option value="Lab / Infrastructure">Lab / Infrastructure</option>
            <option value="Other">Other</option>
          </select>
        </div>

        <div>
          <label class="block text-gray-700 font-medium mb-2">Description <span class="text-red-500">*</span></label>
          <textarea name="description" rows="5" required placeholder="Please describe the issue in detail..."
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"></textarea>
        </div>

        <div>
          <label class="block text-gray-700 font-medium mb-2">Attach Proof (photo / screenshot) - optional</label>
          <input type="file" name="proof" accept="image/*"
                 class="w-full px-4 py-3 border border-gray-300 rounded-lg file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
        </div>

        <!-- Anonymous checkbox -->
        <div class="flex items-center space-x-3">
          <input type="checkbox" id="anonymous" name="anonymous" class="h-5 w-5 text-indigo-600 rounded" checked>
          <label for="anonymous" class="text-gray-700 font-medium">Submit anonymously (no name or email shown)</label>
        </div>

        <!-- Email field - hidden by default -->
        <div id="email-container" class="hidden">
          <label class="block text-gray-700 font-medium mb-2">Email for updates (optional)</label>
          <input type="email" name="contact_email" placeholder="your.email@college.edu.in"
                 class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>

        <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-4 rounded-xl transition duration-200 shadow-md">
          Submit Complaint
        </button>
      </form>
    </div>
  </main>

  <!-- JavaScript to toggle email visibility -->
  <script>
    const anonymousCheckbox = document.getElementById('anonymous');
    const emailContainer = document.getElementById('email-container');

    // Run once on page load
    function toggleEmail() {
      if (anonymousCheckbox.checked) {
        emailContainer.classList.add('hidden');
      } else {
        emailContainer.classList.remove('hidden');
      }
    }

    // Initial state
    toggleEmail();

    // Listen for changes
    anonymousCheckbox.addEventListener('change', toggleEmail);
  </script>
</body>
</html>